FROM python:3.11-slim

WORKDIR /app

# 의존성 설치
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 소스 복사
COPY shared/ ./shared/
COPY agents/trading_agent.py ./agents/

ENV PYTHONUNBUFFERED=1

EXPOSE 8000

CMD ["uvicorn", "agents.trading_agent:app", "--host", "0.0.0.0", "--port", "8000"]

